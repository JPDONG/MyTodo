<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.learn.mytodo">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name="com.learn.mytodo.task.MainActivity"
            android:theme="@style/ColorTranslucentTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".addedittask.AddEditTaskActivity"/>
        <activity android:name=".user.LoginActivity"/>
        <activity android:name=".taskdetail.TaskDetailActivity"/>

        <service android:name=".data.source.TasksSyncService"/>
        <service android:name=".data.source.UserIdentityService"/>
    </application>

</manifest>